<?xml version="1.0" encoding="UTF-8"?> 

<beans xmlns="http://www.springframework.org/schema/beans" 
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://www.springframework.org/schema/beans
		 	 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<bean id="database" class="ku.cs.calendar.models.Database">
		<constructor-arg ref="controller"/>
	</bean>
	
	<bean id="controller" class="ku.cs.calendar.controllers.MainController">
	</bean>
	<bean id="calendar" class="ku.cs.calendar.models.CalendarModel">
		<constructor-arg ref="controller"/> 
	</bean>
</beans>